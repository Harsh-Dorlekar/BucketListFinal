<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/money"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddItemInList">

<TextView
android:id="@+id/textViewAppName"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="BucketList App"
android:textSize="24sp"
android:textStyle="bold"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="16dp"/>

<EditText
android:id="@+id/editTextDestinationName"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:hint="Enter destination name"
app:layout_constraintTop_toBottomOf="@+id/textViewAppName"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintWidth_percent="0.9"
android:layout_marginTop="32dp"/>

<EditText
android:id="@+id/editTextDescription"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:hint="Enter description"
app:layout_constraintTop_toBottomOf="@+id/editTextDestinationName"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintWidth_percent="0.9"
android:layout_marginTop="16dp"/>

<Spinner
android:id="@+id/spinnerRanking"
android:layout_width="0dp"
android:layout_height="wrap_content"
app:layout_constraintTop_toBottomOf="@+id/editTextDescription"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintWidth_percent="0.9"
android:layout_marginTop="16dp"/>

<Button
android:id="@+id/buttonAddDestination"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Add Destination"
app:layout_constraintTop_toBottomOf="@+id/spinnerRanking"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintWidth_percent="0.9"
android:layout_marginTop="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
